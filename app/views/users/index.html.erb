<h1>User Management</h1>

<table id="user_management_table" class="table table-striped table-bordered table-hover compact" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>User ID</th>
      <th>Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Joined At</th>
      <th>Last Login</th>
      <th></th>



    </tr>
  </thead>

  <tbody>





    <% @users.each do |user| %>


      <% unless user.type == 'Admin' %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.firstname %></td>
          <td><%= user.lastname %></td>
          <td><%= user.email %></td>
          <td class="timestamp"><%= user.created_at %></td>
          <td class="timestamp"><%= user.last_sign_in_at %></td>



        <td>


              <%= link_to edit_user_path(user), class: 'btn btn-xs btn-default', title: 'Edit', rel: 'tooltip' do %>
                <i class="fa fa-edit"></i>
              <% end %>

              <%= link_to user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-default', title: 'Destroy', rel: 'tooltip' do %>
                <i class="fa fa-trash"></i>
              <% end %>
        </td>













      </tr>
      <% end %>


    <% end %>






  </tbody>


</table>

<br>