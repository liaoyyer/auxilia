<li class="list-group-item">
  <span class="glyphicon glyphicon-plus"></span>
  <small class="text-muted"><%= a.created_at.strftime('%H:%M:%S %-d %B %Y') %></small><br>




  
  User# <%= activity.owner.id %>
  <% if a.trackable %>
    opened ticket <strong>#<%= link_to a.trackable.id, ticket_path(a.trackable) %></strong>.
  <% else %>
    opened a ticket and then deleted it.
  <% end %>




</li>