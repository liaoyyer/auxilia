<li class="list-group-item">
  <span class="glyphicon glyphicon-edit"></span>
  <small class="text-muted"><%= a.created_at.strftime('%H:%M:%S %-d %B %Y') %></small><br/>
  <%= activity.owner ? activity.owner.firstname : 'Guest' %>
  <% if a.trackable %>
    edited ticket <strong>#<%= link_to a.trackable.id, ticket_path(a.trackable) %></strong>
  <% else %>
    edited a ticket and then deleted it.
  <% end %>
</li>