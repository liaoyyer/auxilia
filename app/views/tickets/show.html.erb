<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @ticket.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @ticket.description %>
</p>

<p>
  <strong>Status:</strong>
	<%= case @ticket.status
                when nil
                  'OPEN'
                when 0
                  'IN PROGRESS'
                when 1
                  'CLOSED'
                end
    %>
</p>

<p>
  <strong>Solution:</strong>
  <%= @ticket.solution %>
</p>

<%= link_to 'Edit', edit_ticket_path(@ticket) %> |
<%= link_to 'Back', tickets_path %>
