<h1>Ticket Listing</h1>

<table id="tickets" class="table table-striped table-bordered table-hover compact" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Ticket ID</th>
      <th>Title</th>
      <th>Category</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th>Closed At</th>
      <th>Status</th>
      <th>User</th>
      <th>Admin</th>
      <th></th>


    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.id %></td>
        <td><%= ticket.title %></td>
        <td><%= ticket.category %></td>
        <td class="timestamp"><%= ticket.created_at %></td>
        <td class="timestamp"><%= ticket.updated_at %></td>
        <td class="timestamp"><%= ticket.closed_at %></td>
        <td><%= render partial: "shared/status", locals: {ticket_status: ticket.status} %></td>
        <td><%= ticket.user_id %>
        <td><%= ticket.admin_id %> 

        <td><%= link_to ticket, class: 'btn btn-xs btn-default', title: 'Show', rel: 'tooltip' do %>
              <i class="fa fa-eye"></i>
            <% end %>



            <% if (user_signed_in? && (current_user.id == ticket.user_id))  %>

              <%= link_to edit_ticket_path(ticket), class: 'btn btn-xs btn-default', title: 'Edit', rel: 'tooltip' do %>
                <i class="fa fa-edit"></i>
              <% end %>


              <%= link_to ticket, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-default', title: 'Destroy', rel: 'tooltip' do %>
                <i class="fa fa-trash"></i>
              <% end %>

            <% end %>


        </td>






      </tr>
    <% end %>
  </tbody>
</table>

<br>






  <%= link_to new_ticket_path, class: 'btn btn-success btn-newticket' do %>
    <i class="glyphicon glyphicon-plus"></i> New Ticket
  <% end %>
