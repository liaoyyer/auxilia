<ul class="nav nav-tabs" role="tablist">
  <li class="active"><%= link_to 'View Tickets', tickets_path %></li>
  <li><%= link_to 'New Ticket', new_ticket_path %></li>
</ul>

<h1>Ticket Listing</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Ticket ID</th>
      <th>Title</th>

      <th>Created At</th>
      <th>Updated At</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.id %></td>
        <td><%= ticket.title %></td>

        <td><%= ticket.created_at %></td>
        <td><%= ticket.updated_at %></td>


        <td><%= case ticket.status
                when nil
                  'OPEN'
                when 0
                  'IN PROGRESS'
                when 1
                  'CLOSED'
                end
         %></td>


        <td><%= link_to 'Show', ticket, class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Edit', edit_ticket_path(ticket), class: 'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>


      </tr>
    <% end %>
  </tbody>
</table>

<br>






<%= link_to new_ticket_path, class: 'btn btn-success' do %>
  <i class="glyphicon glyphicon-plus"></i> New Ticket
<% end %>